<Window x:Class="Bestiary.OptionsWindows.ClearBookmarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bestiary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Clear Bookmarks" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" TextAlignment="Center" FontSize="16" FontWeight="Bold"
                   Text="This will clear all bookmarks unrecoverably" />
        <Button Grid.Row="1" Margin="10 5 10 5" Content="Clear Bookmarks" Command="{Binding ClearBookmarks}"/>
        <Button Grid.Row="2" Margin="10 5 10 10" Content="Close" IsCancel="True"/>
    </Grid>
</Window>
